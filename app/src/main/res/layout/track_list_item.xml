<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="名字"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_star"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/btn_star_big_on" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023-12-12 09:52" />

            <TextView
                android:id="@+id/tv_track_item_endtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023-12-12 09:52" />

            <TextView
                android:id="@+id/tv_track_item_pts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5个点" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5.2km" />

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25min" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_track_item_memo"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/back_run"
            android:gravity="center"
            android:text="改名"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_track_item_share"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/back_suspend"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/default_red_dark"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>
