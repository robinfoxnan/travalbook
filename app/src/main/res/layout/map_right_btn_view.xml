<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_layer"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:text="layer"
        app:srcCompat="@drawable/msg_map_type" />

    <ImageButton
        android:id="@+id/btn_screen_shot"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_crop" />

    <ImageButton
        android:id="@+id/btn_addmark"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageButton
        android:id="@+id/btn_follow_friend"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_menu_mapmode" />

    <ImageButton
        android:id="@+id/btn_trafic"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/trafics" />

    <ImageButton
        android:id="@+id/btn_record"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_bar_record_24dp" />





</LinearLayout>