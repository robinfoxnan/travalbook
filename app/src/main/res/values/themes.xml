<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravelBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_title</item>
        <item name="colorPrimaryVariant">@color/default_neutral_lighter</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TravelBook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/gray_title</item>
        <item name="colorPrimaryVariant">@color/default_neutral_lighter</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 状态栏背景颜色（浅色） -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 或者 -->
        <!-- <item name="android:statusBarColor">@color/white</item> -->

        <!-- 关键：浅色状态栏 → 深色字体 -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TravelBook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TravelBook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>